local Library = {}

function Library:CreateWindow(title)
    local ScreenGui = Instance.new("ScreenGui")
    local MainFrame = Instance.new("Frame")
    local TitleFrame = Instance.new("Frame")
    local Title = Instance.new("TextLabel")
    local CloseButton = Instance.new("TextButton")
    local MinimizeButton = Instance.new("TextButton")
    local UIListLayout = Instance.new("UIListLayout")

    ScreenGui.Parent = game.CoreGui

    MainFrame.Name = "MainFrame"
    MainFrame.Parent = ScreenGui
    MainFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    MainFrame.Size = UDim2.new(0, 200, 0, 200)
    MainFrame.Position = UDim2.new(0.5, -100, 0.5, -150)
    MainFrame.Draggable = true
    MainFrame.Active = true
    MainFrame.Selectable = true

    TitleFrame.Name = "TitleFrame"
    TitleFrame.Parent = MainFrame
    TitleFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    TitleFrame.Size = UDim2.new(1, 0, 0, 30)

    Title.Name = "Title"
    Title.Parent = TitleFrame
    Title.BackgroundTransparency = 1
    Title.Size = UDim2.new(1, -60, 1, 0)
    Title.Position = UDim2.new(0, 5, 0, 0)
    Title.Font = Enum.Font.GothamBold
    Title.Text = title
    Title.TextColor3 = Color3.fromRGB(255, 255, 255)
    Title.TextSize = 14
    Title.TextXAlignment = Enum.TextXAlignment.Left

    -- Close Button
    CloseButton.Name = "CloseButton"
    CloseButton.Parent = TitleFrame
    CloseButton.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    CloseButton.Size = UDim2.new(0, 20, 0, 20)
    CloseButton.Position = UDim2.new(1, -30, 0.5, -10)
    CloseButton.Text = "X"
    CloseButton.Font = Enum.Font.GothamBold
    CloseButton.TextColor3 = Color3.fromRGB(100, 100, 100)
    CloseButton.TextSize = 12
    CloseButton.MouseButton1Click:Connect(function()
        ScreenGui:Destroy()
    end)

    -- Minimize Button
    MinimizeButton.Name = "MinimizeButton"
    MinimizeButton.Parent = TitleFrame
    MinimizeButton.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    MinimizeButton.Size = UDim2.new(0, 20, 0, 20)
    MinimizeButton.Position = UDim2.new(1, -60, 0.5, -10)
    MinimizeButton.Text = "^"
    MinimizeButton.Font = Enum.Font.GothamBold
    MinimizeButton.TextColor3 = Color3.fromRGB(100, 100, 100)
    MinimizeButton.TextSize = 12

    local contentVisible = true
    MinimizeButton.MouseButton1Click:Connect(function()
        contentVisible = not contentVisible
        for _, item in ipairs(MainFrame:GetChildren()) do
            if item ~= TitleFrame then
                item.Visible = contentVisible
            end
        end
        MainFrame.Size = contentVisible and UDim2.new(0, 200, 0, 200) or UDim2.new(0, 200, 0, 30)
    end)

    UIListLayout.Parent = MainFrame
    UIListLayout.SortOrder = Enum.SortOrder.LayoutOrder
    UIListLayout.Padding = UDim.new(0, 5)

    local Window = {}

    function Window:CreateSection(sectionTitle)
        local Section = Instance.new("Frame")
        local SectionTitle = Instance.new("TextLabel")
        local SectionLayout = Instance.new("UIListLayout")
        local SectionMinimizeButton = Instance.new("TextButton")

        Section.Name = "Section"
        Section.Parent = MainFrame
        Section.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
        Section.Size = UDim2.new(1, -10, 0, 60)
        Section.Position = UDim2.new(0, 5, 0, 5)
        Section.BorderSizePixel = 0

        SectionTitle.Name = "SectionTitle"
        SectionTitle.Parent = Section
        SectionTitle.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
        SectionTitle.Size = UDim2.new(1, -20, 0, 25)
        SectionTitle.Font = Enum.Font.GothamBold
        SectionTitle.Text = sectionTitle
        SectionTitle.TextColor3 = Color3.fromRGB(255, 255, 255)
        SectionTitle.TextSize = 14

        SectionLayout.Parent = Section
        SectionLayout.SortOrder = Enum.SortOrder.LayoutOrder
        SectionLayout.Padding = UDim.new(0, 5)

        SectionMinimizeButton.Name = "SectionMinimizeButton"
        SectionMinimizeButton.Parent = Section
        SectionMinimizeButton.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
        SectionMinimizeButton.Size = UDim2.new(0, 20, 0, 20)
        SectionMinimizeButton.Position = UDim2.new(1, -20, 0, 2.5)
        SectionMinimizeButton.Text = "^"
        SectionMinimizeButton.Font = Enum.Font.GothamBold
        SectionMinimizeButton.TextColor3 = Color3.fromRGB(100, 100, 100)
        SectionMinimizeButton.TextSize = 12

        local sectionContentVisible = true
        SectionMinimizeButton.MouseButton1Click:Connect(function()
            sectionContentVisible = not sectionContentVisible
            for _, item in ipairs(Section:GetChildren()) do
                if item ~= SectionTitle and item ~= SectionMinimizeButton then
                    item.Visible = sectionContentVisible
                end
            end
            Section.Size = sectionContentVisible and UDim2.new(1, -10, 0, 60) or UDim2.new(1, -10, 0, 25)
        end)

        local SectionFunctions = {}

        function SectionFunctions:CreateButton(text, callback)
            local Button = Instance.new("TextButton")

            Button.Name = "Button"
            Button.Parent = Section
            Button.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
            Button.Size = UDim2.new(1, -10, 0, 25)
            Button.Font = Enum.Font.GothamBold
            Button.Text = text
            Button.TextColor3 = Color3.fromRGB(255, 255, 255)
            Button.TextSize = 14
            Button.MouseButton1Click:Connect(callback)

            return Button
        end

        function SectionFunctions:CreateToggle(text, callback)
            local ToggleFrame = Instance.new("Frame")
            local ToggleButton = Instance.new("TextButton")
            local isActive = false

            ToggleFrame.Parent = Section
            ToggleFrame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
            ToggleFrame.Size = UDim2.new(1, -10, 0, 25)

            ToggleButton.Parent = ToggleFrame
            ToggleButton.Size = UDim2.new(1, 0, 1, 0)
            ToggleButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
            ToggleButton.Font = Enum.Font.GothamBold
            ToggleButton.Text = text
            ToggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
            ToggleButton.TextSize = 14

            ToggleButton.MouseButton1Click:Connect(function()
                isActive = not isActive
                callback(isActive)
                ToggleButton.BackgroundColor3 = isActive and Color3.fromRGB(0, 170, 0) or Color3.fromRGB(50, 50, 50)
            end)

            return ToggleButton
        end

        return SectionFunctions
    end

    return Window
end

return Library
