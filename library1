local Library = {}

function Library:CreateWindow(title)
    local ScreenGui = Instance.new("ScreenGui")
    local MainFrame = Instance.new("Frame")
    local TitleFrame = Instance.new("Frame")
    local Title = Instance.new("TextLabel")
    local MinimizeButton = Instance.new("TextButton")
    local UIListLayout = Instance.new("UIListLayout")

    ScreenGui.Parent = game.CoreGui

    MainFrame.Name = "MainFrame"
    MainFrame.Parent = ScreenGui
    MainFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    MainFrame.Size = UDim2.new(0, 200, 0, 50)  -- Tamanho menor
    MainFrame.Position = UDim2.new(0.5, -100, 0.5, -25)  -- Centralizado
    MainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
    MainFrame.Draggable = true
    MainFrame.Active = true
    MainFrame.BorderSizePixel = 0
    MainFrame.ClipsDescendants = true

    local MainUICorner = Instance.new("UICorner")
    MainUICorner.CornerRadius = UDim.new(0, 8)
    MainUICorner.Parent = MainFrame

    TitleFrame.Name = "TitleFrame"
    TitleFrame.Parent = MainFrame
    TitleFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    TitleFrame.Size = UDim2.new(1, 0, 0, 25)

    local TitleUICorner = Instance.new("UICorner")
    TitleUICorner.CornerRadius = UDim.new(0, 6)
    TitleUICorner.Parent = TitleFrame

    Title.Name = "Title"
    Title.Parent = TitleFrame
    Title.BackgroundTransparency = 1
    Title.Size = UDim2.new(1, -30, 1, 0) -- Ajustado para permitir espaço para o botão
    Title.Position = UDim2.new(0, 10, 0, 0)
    Title.Font = Enum.Font.GothamBold
    Title.Text = title
    Title.TextColor3 = Color3.fromRGB(255, 255, 255)
    Title.TextSize = 12
    Title.TextXAlignment = Enum.TextXAlignment.Left

    MinimizeButton.Name = "MinimizeButton"
    MinimizeButton.Parent = TitleFrame
    MinimizeButton.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    MinimizeButton.Size = UDim2.new(0, 20, 0, 20)
    MinimizeButton.Position = UDim2.new(1, -25, 0.5, -10) -- Alinhado à direita
    MinimizeButton.Font = Enum.Font.GothamBold
    MinimizeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    MinimizeButton.TextSize = 12
    MinimizeButton.Text = "▼"

    local contentVisible = true
    MinimizeButton.MouseButton1Click:Connect(function()
        contentVisible = not contentVisible

        if contentVisible then
            MainFrame:TweenSize(UDim2.new(0, 200, 0, 50 + UIListLayout.AbsoluteContentSize.Y), Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.3, true)
            MinimizeButton.Text = "▼"
        else
            MainFrame:TweenSize(UDim2.new(0, 200, 0, 25), Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.3, true)
            MinimizeButton.Text = "▲"
        end
    end)

    UIListLayout.Parent = MainFrame
    UIListLayout.SortOrder = Enum.SortOrder.LayoutOrder
    UIListLayout.Padding = UDim.new(0, 5)

    local Window = {}

    function Window:CreateSection(sectionTitle)
        local Section = Instance.new("Frame")
        local SectionTitleFrame = Instance.new("Frame")
        local SectionTitle = Instance.new("TextLabel")
        local SectionMinimizeButton = Instance.new("TextButton")
        local SectionLayout = Instance.new("UIListLayout")

        Section.Name = "Section"
        Section.Parent = MainFrame
        Section.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
        Section.Size = UDim2.new(1, -10, 0, 100)
        Section.Position = UDim2.new(0, 5, 0, 5)

        local SectionCorner = Instance.new("UICorner")
        SectionCorner.CornerRadius = UDim.new(0, 8)
        SectionCorner.Parent = Section

        SectionTitleFrame.Name = "SectionTitleFrame"
        SectionTitleFrame.Parent = Section
        SectionTitleFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
        SectionTitleFrame.Size = UDim2.new(1, 0, 0, 25)

        local SectionTitleFrameCorner = Instance.new("UICorner")
        SectionTitleFrameCorner.CornerRadius = UDim.new(0, 6)
        SectionTitleFrameCorner.Parent = SectionTitleFrame

        SectionTitle.Name = "SectionTitle"
        SectionTitle.Parent = SectionTitleFrame
        SectionTitle.BackgroundTransparency = 1
        SectionTitle.Size = UDim2.new(1, -30, 1, 0) -- Ajustado para permitir espaço para o botão
        SectionTitle.Position = UDim2.new(0, 10, 0, 0)
        SectionTitle.Font = Enum.Font.GothamBold
        SectionTitle.Text = sectionTitle
        SectionTitle.TextColor3 = Color3.fromRGB(255, 255, 255)
        SectionTitle.TextSize = 12
        SectionTitle.TextXAlignment = Enum.TextXAlignment.Left

        SectionMinimizeButton.Name = "SectionMinimizeButton"
        SectionMinimizeButton.Parent = SectionTitleFrame
        SectionMinimizeButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
        SectionMinimizeButton.Size = UDim2.new(0, 20, 0, 20)
        SectionMinimizeButton.Position = UDim2.new(1, -25, 0.5, -10) -- Alinhado à direita
        SectionMinimizeButton.Font = Enum.Font.GothamBold
        SectionMinimizeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
        SectionMinimizeButton.TextSize = 12
        SectionMinimizeButton.Text = "▼"

        local sectionVisible = true
        SectionMinimizeButton.MouseButton1Click:Connect(function()
            sectionVisible = not sectionVisible

            if sectionVisible then
                Section:TweenSize(UDim2.new(1, -10, 0, 100), Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.3, true)
                SectionMinimizeButton.Text = "▼"
            else
                Section:TweenSize(UDim2.new(1, -10, 0, 25), Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.3, true)
                SectionMinimizeButton.Text = "▲"
            end
            -- Atualiza o tamanho da janela com base no conteúdo
            local totalHeight = 50 + UIListLayout.AbsoluteContentSize.Y
            for _, sec in pairs(MainFrame:GetChildren()) do
                if sec.Name == "Section" and sec.Visible then
                    totalHeight = totalHeight + sec.Size.Y.Offset
                end
            end
            MainFrame:TweenSize(UDim2.new(0, 200, 0, totalHeight), Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.3, true)
        end)

        SectionLayout.Parent = Section
        SectionLayout.SortOrder = Enum.SortOrder.LayoutOrder
        SectionLayout.Padding = UDim.new(0, 5)

        local SectionFunctions = {}

        function SectionFunctions:CreateButton(text, callback)
            local Button = Instance.new("TextButton")

            Button.Parent = Section
            Button.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
            Button.Size = UDim2.new(1, -10, 0, 20)
            Button.Position = UDim2.new(0, 5, 0, 5)
            Button.Font = Enum.Font.GothamBold
            Button.Text = text
            Button.TextColor3 = Color3.fromRGB(255, 255, 255)
            Button.TextSize = 12
            Button.MouseButton1Click:Connect(callback)

            local ButtonCorner = Instance.new("UICorner")
            ButtonCorner.CornerRadius = UDim.new(0, 5)
            ButtonCorner.Parent = Button

            return Button
        end

        return SectionFunctions
    end

    return Window
end

return Library
